<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheet</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Headlines -->
    <style name="Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/poppins_extrabold</item>
    </style>
    <style name="Headline.h1">
        <item name="android:textSize">36sp</item>
    </style>
    <style name="Headline.h2">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="Headline.h3">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Headline.h4">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Headline.h5">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Headline.h6">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextAppearances -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextAppearance.Label">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.Subtitle">
        <item name="android:fontFamily">@font/bebaskai</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.Tab">
        <item name="android:fontFamily">@font/bebaskai</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Medium">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- TextAppearances -->
    <style name="Button">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">@dimen/default_padding_large</item>
        <item name="android:paddingEnd">@dimen/default_padding_large</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Button.primary">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textColor">@drawable/button_primary_fontstate</item>
    </style>
    <style name="Button.secondary">
        <item name="android:background">@drawable/background_button_secondary</item>
        <item name="android:textColor">@drawable/button_primary_fontstate</item>
    </style>
    <style name="Button.Listed">
        <item name="android:layout_margin">0dp</item>
    </style>


    <!-- BottomSheetDialog -->
    <style name="AppBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>
    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_sheet</item>
    </style>

    <!-- Checkbox -->
    <style name="AppCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/TextAppearance.Label</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <!-- SpinnerDesign -->
    <style name="AppSpinner" parent="AppTheme">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:textAppearance">@style/Headline.h5</item>
    </style>
    <style name="AppPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/background_input</item>
    </style>

    <!-- TabLayout -->
    <style name="AppTabLayout">
        <item name="android:background">@drawable/background_tablayout</item>
        <item name="tabIndicator">@drawable/background_tabindicator</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tab</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <!-- FloatingActionButton -->
    <style name="AppFloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">3dp</item>
        <item name="fabCustomSize">@android:dimen/app_icon_size</item>
        <item name="maxImageSize">14dp</item>
        <item name="rippleColor">@color/colorAccentDark</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <!-- ProgressBar -->
    <style name="AppProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_track</item>
    </style>


    <!-- Animations -->
    <style name="anim_dialog_scale">
        <item name="android:windowEnterAnimation">@anim/dialog_scaleup</item>
        <item name="android:windowExitAnimation">@anim/dialog_scaledown</item>
    </style>
</resources>
