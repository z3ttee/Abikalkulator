<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.zitzmanncedric.abicalc">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".AppCore"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.subject.EditGradeActivity"></activity>
        <activity android:name=".activities.subject.ViewSubjectActivity" />
        <activity android:name=".activities.subject.AddGradeActivity" />
        <activity android:name=".activities.main.MainActivity" />
        <activity
            android:name=".activities.setup.SetupActivity"
            android:theme="@style/AppTheme.Splash" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>